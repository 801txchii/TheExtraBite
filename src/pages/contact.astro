---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="Contact Me" description='Contact me' />
	</head>
	<body>
        <Header title={SITE_TITLE}/>
        <h1>Contact</h1>
		<form action="https://api.web3forms.com/submit" method="POST">
            <input type="hidden" name="access_key" value="b964b38f-6f24-4593-b501-ae203b332ce8">
            <input type="hidden" name="from_name" value="The Extra Bite">

            <input type="text" name="name" placeholder="Your Name" required> 
            <br>
            <input type="email" name="email" placeholder="Your Email" required>
            <br>
            <input type="text" name="title" placeholder="Subject" required>
            <br>
            <textarea name="textarea" name="textarea" placeholder="Your Text" required></textarea>
            <br>
            <input type="hidden" name="redirect" value="https://theextrabite.vercel.app/success">
            <button type="submit">Send</button>
        </form>
		<Footer />
	</body>
</html>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
	form {
        width: 80%;
        margin: 0 10%;
    }

    input, textarea {
        width: 100%;
        margin: 1rem 0;
        height: 3rem;
        font-size: 2rem;
        padding: .5rem;
        font-family: Roboto, sans-serif;
        background-color: transparent;
        border: 2px solid white;
        color: white;
    }

    textarea {
        height: 10rem;
    }

    input::placeholder, textarea::placeholder {
        font-size: 2rem;
        padding: .5rem;
        color: white;
    }

    button {
        background-color: transparent;
        border: 2px solid white;
        height: 4rem;
        width: 102%;
        color: white;
        transition: .2s;
        font-size: 2rem;
    }

    button:hover {
        background-color: white;
        color: black;
    }
</style>